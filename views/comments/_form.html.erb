<%= form_for([@ticket, @comment], url: ticket_comments_path(@ticket), remote: true) do |f| %>
  <%= csrf_meta_tags %>


  <div class="mb-3">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <%= f.submit "Add", class: "btn btn-success" %>
<% end %>
