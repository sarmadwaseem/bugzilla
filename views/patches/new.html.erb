<h1>New Patch</h1>

<%= form_for [@current_ticket, @patch] do |f| %>
  <div class="mb-3">
    <%= f.label :name %>
    <%= f.text_field :name, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :comment %>
    <%= f.text_area :comment, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>

   <div class="mb-3">
    <%= f.label :patch_file %>
    <%= f.file_field :patch_file, accept: ".zip", class: "form-control" %>
    <small class="form-text text-muted">Upload a ZIP file (max 10MB).</small>
  </div>

  <div class="actions">
    <%= f.submit "Create Patch" , class: "btn btn-success" %>
  </div>
<% end %>
